<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dialog_radio_programs_layout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/retur" />

            <TextView
                android:id="@+id/dialog_radio_programs_tv_region"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#F08080"
                android:textStyle="bold"
                tools:text="广西" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_radio_programs_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:textColor="@android:color/black"
                tools:text="中央人民广播电视台" />
        </LinearLayout>
    </LinearLayout>



        <ListView android:id="@+id/fragment_program_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
        </ListView>






</LinearLayout>